{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "C:\\Program Files\\Git\\bin\\sh.exe",
            "args": [
                "--login",
                "-i",
                "-c",
                "make f723dap"
            ],
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": {
                "fileLocation":["relative", "${workspaceRoot}/f723dap"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "C:\\Program Files\\Git\\bin\\sh.exe",
            "args": [
                "-c",
                "make clean"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
    
}